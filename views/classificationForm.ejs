<h1 class="content-title"><%= title %></h1>

<form class="form bg-lvl-2" method="POST">
  <div class="form-group">
    <label for="title">Title:</label>
    <% if(classification) { %>
    <input id="title" name="title" value="<%= classification.title %>"></input>
    <% } else { %>
    <input id="title" name="title" value="" placeholder="--Please Input a Classification Title--"></input>
    <% } %>
  </div>

  <div class="form-group">
    <label for="multiplier">Primary Multiplier:</label>
    <% if(classification) { %>
    <input type="number" id="multiplier" name="multiplier" step="0.05" value="<%= classification.multiplier %>"></input>
    <% } else { %>
    <input type="number" id="multiplier" name="multiplier" step="0.05" value="" placeholder="--Please Input a Classification Primary Multiplier--"></input>
    <% } %>
  </div>

  <div class="form-group">
    <label for="subMultiplier">Secondary Multiplier:</label>
    <% if(classification) { %>
    <input type="number" id="subMultiplier" name="subMultiplier" step="0.05" value="<%= classification.subMultiplier %>"></input>
    <% } else { %>
    <input type="number" id="subMultiplier" name="subMultiplier" step="0.05" value="" placeholder="--Please Input a Classification Secondary Multiplier--"></input>
    <% } %>
  </div>

  <button class="button" type="submit">Submit</button>
</form>

<% if (errors) { %>
<ul>
  <% errors.forEach(function(error) { %>
  <li><%= error.msg %></li>
  <% }); %>
</ul>
<% } %>